
# Client Dockerfile for LOCAL production testing (without SSL)
FROM node:20.17.0-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# Use local nginx config WITHOUT SSL for local testing
COPY nginx/nginx-local.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
